<div class="sm:mt-2 relative group <%= classes %>">
  <%= link_to link do %>
    <%= image_tag(image, class: "w-full h-40 sm:h-60 rounded-lg shadow object-cover brightness-50 group-hover:brightness-100 transition duration-300 ease-in-out", alt: alt_image) %>
    <div class="absolute inset-0 flex items-center justify-center">
      <h3 class="heading-1 text-3xl sm:text-4xl text-white text-center">
        <%= title %><br>
        <div class="text-base sm:text-lg w-3/4 mx-auto mt-2">
          <%= sub_title %>
        </div>
      </h3>
      <p></p>
    </div>
  <% end %>
</div>