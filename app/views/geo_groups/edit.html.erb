<%= content_for :meta_title, "Edit #{@geo_group.name}" %>
<div class="container px-4 bg-white mt-24 mb-12 sm:mt-36 sm:mb-20 mx-auto">
  <h1 class="heading-1">Edit <%= @geo_group.name %></h1>

<%= form_with(model: @geo_group, local: true, class: "max-w-lg mx-auto my-10") do |f| %>
  <% if @geo_group.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold">Attention !</strong>
      <span class="block sm:inline"><%= pluralize(@geo_group.errors.count, "error") %> ne permettent pas d'enregistrer ce groupe gÃ©o :</span>
      <ul class="list-disc pl-5 mt-3">
      <% @geo_group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, id: :geo_group_name, class: "form-input" %>
  </div>

  <div class="mb-4">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, id: :geo_group_description, class: "form-input" %>
  </div>

  <div class="mb-4">
    <%= f.label :latitude, class: "form-label" %>
    <%= f.number_field :latitude, step: :any, id: :geo_group_latitude, class: "form-input" %>
  </div>

  <div class="mb-4">
    <%= f.label :longitude, class: "form-label" %>
    <%= f.number_field :longitude, step: :any, id: :geo_group_longitude, class: "form-input" %>
  </div>

  <div class="mb-4">
    <%= f.label :kind, class: "form-label" %>
    <%= f.select :kind, options_for_select(GeoGroup.kinds.keys, @geo_group.kind), {}, { id: :geo_group_kind, class: "form-select" } %>
  </div>

  <div class="mb-4">
    <%= f.label :slug, class: "form-label" %>
    <%= f.text_field :slug, id: :geo_group_slug, class: "form-input" %>
  </div>

  <div class="flex items-center justify-between">
    <%= f.submit "Edit", as: :button, class: "btn-primary w-full mt-3" %>
  </div>
<% end %>

</div>


