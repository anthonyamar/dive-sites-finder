<%= content_for :meta_title, "Edit #{@city.name}" %>
<div class="container px-4 bg-white mt-24 mb-12 sm:mt-36 sm:mb-20 mx-auto">
  <h1 class="heading-1">Edit <%= @city.name %></h1>

<%= form_with(model: @city, url: update_city_path(@city), method: :patch, local: true, class: "max-w-lg mx-auto my-10") do |f| %>
  <% if @city.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold">Warning !</strong>
      <span class="block sm:inline"><%= pluralize(@city.errors.count, "error") %> prevent the edit :</span>
      <ul class="list-disc pl-5 mt-3">
      <% @city.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, id: :city_name, class: "form-input" %>
  </div>
  
  <div class="mb-4">
    <%= f.label :slug, class: "form-label" %>
    <%= f.text_field :slug, id: :city_slug, class: "form-input" %>
  </div>

  <div class="mb-4">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, id: :city_description, class: "form-input" %>
  </div>
  <div class="mb-4">
    <%= f.label :latitude, class: "form-label" %>
    <%= f.number_field :latitude, step: :any, id: :city_latitude, class: "form-input" %>
  </div>

  <div class="mb-4">
    <%= f.label :longitude, class: "form-label" %>
    <%= f.number_field :longitude, step: :any, id: :city_longitude, class: "form-input" %>
  </div>
  
  <div class="mb-4">
    <%= f.label :timezone, class: "form-label" %>
    <%= f.text_field :timezone, id: :city_timezone, class: "form-input" %>
  </div>
  
  <div class="mb-4">
    <%= f.label :capital_city, class: "form-label" %>
    <%= f.select :capital_city, options_for_select([["Yes", true], ["No", false]], @city.capital_city), {}, { id: :city_capital_city, class: "form-select" } %>
  </div>
  
  <div class="flex items-center justify-between">
    <%= f.submit "Edit", as: :button, class: "btn-primary w-full mt-3" %>
  </div>
<% end %>

</div>


