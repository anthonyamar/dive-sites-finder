<div class="flex min-h-full flex-col justify-center px-6 py-36 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h1 class="heading-1 mt-10 text-2xl">Edit your account</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6", method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <div>
        <div class="flex items-center justify-between">
          <label for="password" class="block text-sm font-medium leading-6 text-dark-blue">New password</label>
        </div>
        <div class="mt-2">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "**********", required: true, class: "block w-full rounded-md border-0 py-1.5 text-dark-blue shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-main-sky sm:text-sm sm:leading-6" %>
        </div>
        <div class="flex items-center justify-between">
          <label for="password" class="block text-sm font-medium leading-6 text-dark-blue">New password confirmation</label>
        </div>
        <div class="mt-2">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "**********", required: true, class: "block w-full rounded-md border-0 py-1.5 text-dark-blue shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-main-sky sm:text-sm sm:leading-6" %>
        </div>
      </div>

      <div>
        <%= f.button "Edit my account", class: "btn-primary w-full focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-main-sky" %>
      </div>
    <% end %>

    <p class="mt-10 text-sm text-gray-500">
      <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "font-semibold leading-6 text-main-sky hover:text-sky-400" %>
    </p>
    <p class="mt-2 text-sm text-gray-500">
      <%= link_to "Cancel my account (irreversible)", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?", turbo_method: :delete }, class: "font-semibold leading-6 text-red-500 hover:text-red-400" %>
    </p>
  </div>
</div>