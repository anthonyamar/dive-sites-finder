<div class="flex min-h-full flex-col justify-center px-6 py-36 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= image_tag("logos/logo.png", class: "mx-auto h-10 w-auto", alt: "Logo of DiveSitesFinder") %>
    <h1 class="heading-1 mt-10 text-center text-2xl">Forgot your password?</h1>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "space-y-6", method: :post }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <div>
        <label for="email" class="block text-sm font-medium leading-6 text-dark-blue">Email address</label>
        <div class="mt-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "cousteau@gmail.com", required: true, class: "block w-full rounded-md border-0 py-1.5 text-dark-blue shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-main-sky sm:text-sm sm:leading-6" %>
        </div>
      </div>

      <div>
        <%= f.button "Send me reset password instructions", class: "btn-primary w-full focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-main-sky" %>
      </div>
    <% end %>
    
    <p class="mt-10 text-center text-sm text-gray-500">
      Not a member yet?
      <%= link_to "Sign up!", new_user_registration_path, class: "font-semibold leading-6 text-main-sky hover:text-sky-400" %>
    </p>
    <p class="mt-2 text-center text-sm text-gray-500">
      Already a member?
      <%= link_to "Sign in!", new_user_session_path, class: "font-semibold leading-6 text-main-sky hover:text-sky-400" %>
    </p>
    <p class="mt-2 text-center text-sm text-gray-500">
      Didn't receive
      <%= link_to "confirmation instructions?", new_confirmation_path(resource_name), class: "font-semibold leading-6 text-main-sky hover:text-sky-400" %>
    </p>
  </div>
</div>