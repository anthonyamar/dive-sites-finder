<div class="container bg-white mt-36 mb-20 mx-auto">
  <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">
    Find your next 
    <span class="line-through text-gray-500">center</span> 
    <span class="bold text-sky-600">community</span>.
  </h1>
  <div class="relative overflow-x-auto shadow-md sm:rounded-lg mt-8">
    <table class="w-full text-sm text-left text-gray-500">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3">
            Dive center
          </th>
          <th scope="col" class="px-6 py-3">
            City
          </th>
          <th scope="col" class="px-6 py-3">
            Country code
          </th>
          <th scope="col" class="px-6 py-3">
            Activities
          </th>
        </tr>
      </thead>
      <tbody>
        <% @dive_centers.each do |dive_center| %>
          <tr class="bg-white border-b hover:bg-sky-100">
            <th scope="row" class="px-6 py-4 font-medium text-sky-600 whitespace-nowrap">
              <%= link_to dive_center.name.titleize, dive_center_path(dive_center), class: "underline" %>
            </th>
            <td class="px-6 py-4">
              <%= dive_center.city %>
            </td>
            <td class="px-6 py-4">
              <%= dive_center.country_code %>
            </td>
            <td class="px-6 py-4">
              <%= dive_center.activities&.to_sentence&.capitalize %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="text-center mt-10">
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
  </div>
</div>